<div class="border-form-div">
  <h2 class="text-center">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <%= flash_messages %>

    <div class="form-group">
      <%= f.label :email, class: "control-label text-left" %>
      <%= f.email_field :email, autofocus: true , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label text-left" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group text-center waiver-check">
      <%= f.check_box :agreed_to_waiver %>
      <%= f.label :agreed_to_waiver, 'I have read and fully understand ', autocomplete: "off", class: "control-label" %>
      <%= link_to 'the agreement', waiver_path %>.
    </div>

    <div class="row-fluid buttons">
      <div class="col-sm-3 col-sm-offset-3">
        <%= link_to 'Back', root_path, class: 'btn btn-primary btn-block' %>
      </div>
      <div class="col-sm-3">
        <%= f.submit "Sign in", class: 'btn btn-primary btn-block', data: { disable_with: 'Sign in' } %>
      </div>
    </div>

    <!--
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
            <%= render "devise/shared/links" %>
        </div>
    </div>
    -->
  <% end %>
</div>
