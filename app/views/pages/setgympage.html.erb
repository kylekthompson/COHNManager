<div class="border-form-div">
  <h2 class="text-center">Set The Currect Location</h2>

  <%= form_tag :action => :setgym, html: {class: "form-horizontal"} do %>
  	<div class="radio-buttons text-center">
	  <% @gyms.each do |gym| %>
			<%= radio_button_tag "gym_id", gym.id, class: "form-control" %>
			<%= label_tag "gym_id[#{gym.id}]", gym.name, class: "control-label" %><br>
	  <% end %>
	  </div>
	  <div class="form-group">
	      <%= submit_tag "Submit", class: 'btn btn-primary center-block' %>
	  </div>

  <% end %>
</div>